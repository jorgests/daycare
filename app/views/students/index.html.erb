<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= link_to t('.show'), student %></td>
        <td><%= link_to t('.edit'), edit_student_path(student) %></td>
        <td><%= link_to t('.destroy'), student, method: :delete, data: { confirm: t('.confirm_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_student'), new_student_path %>
